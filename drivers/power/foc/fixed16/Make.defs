# Include part visible for general upper-half FOC

CSRCS += foc_fixed16.c

# Include fixed16 FOC controller

ifeq ($(CONFIG_POWER_FOC_CONTROL_PI),y)
CSRCS += foc_picontrol_b16.c
endif

# Include fixed16 FOC SVM3 modulation

ifeq ($(CONFIG_POWER_FOC_MODULATION_SVM3),y)
CSRCS += foc_svm3_b16.c
endif

# Include FOC driver build support

DEPPATH += --dep-path power$(DELIM)foc$(DELIM)fixed16
VPATH += :power$(DELIM)foc$(DELIM)fixed16
CFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" $(TOPDIR)$(DELIM)drivers$(DELIM)power$(DELIM)foc$(DELIM)fixed16}