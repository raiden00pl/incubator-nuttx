#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

if ARCH_BOARD_ODRIVE

choice
       prompt "ODrive HW version"
       default ODRIVE_HW_36

config ODRIVE_HW_36
	bool "ODrive 3.6 version"

endchoice # ODrive HW version

choice
       prompt "ODrive voltage version"
       default ODRIVE_HW_VOLTAGE_56

config ODRIVE_HW_VOLTAGE_56
	bool "ODrive 56V version"

config ODRIVE_HW_VOLTAGE_24
	bool "ODrive 24V version"

endchoice # ODrive voltage version

config ODRIVE_FOC_CURRENT_GAIN
	int "ODrive current gain [V/V]"
	default 80
	---help---
		Possible values: 10, 20, 40, 80

if POWER_FOC

config ODRIVE_FOC_FOC0
	bool "ODrive enable support for FOC device 0"
	default y

if ODRIVE_FOC_FOC0

choice
       prompt "ODrive FOC0 type"
       default ODRIVE_FOC_FOC0_USE_FLOAT

config ODRIVE_FOC_FOC0_USE_FLOAT
	bool "ODrive FOC0 use float "

config ODRIVE_FOC_FOC0_USE_FIXED16
	bool "ODrive FOC0 use fixed16"

endchoice # ODrive FOC0 type

endif # ODRIVE_FOC_FOC0

config ODRIVE_FOC_FOC1
	bool "ODrive enable support for FOC device 1"
	default y

if ODRIVE_FOC_FOC1

choice
       prompt "ODrive FOC1 type"
       default ODRIVE_FOC_FOC1_USE_FLOAT

config ODRIVE_FOC_FOC1_USE_FLOAT
	bool "ODrive FOC1 use float"

config ODRIVE_FOC_FOC1_USE_FIXED16
	bool "ODrive FOC1 use fixed16"

endchoice # ODrive FOC1 type

endif # ODRIVE_FOC_FOC1

config ODRIVE_FOC_VBUS
	bool "ODrive VBUS ADC support"
	default n

config ODRIVE_FOC_TEMP
	bool "ODrive Temperature ADC support"
	default n

endif # POWER_FOC

endif # ARCH_BOARD_ODRIVE
